@{
    Layout = "_DashboardLayout";
    ViewBag.title = "Dashboard";
}

@section PageStyles {
    <link rel="stylesheet" href="~/app-assets/vendor/libs/apex-charts/apex-charts.css" />

    <style>
        .metric-card .info-label {
            font-size: 1.1rem; /* was 0.7rem */
            color: #495057;
        }

        .metric-card .info-value {
            font-size: 1.7rem; /* was 0.95rem */
            font-weight: 600;
        }

        .metric-card {
            border: none;
            border-radius: 0.75rem;
            overflow: hidden;
            transition: transform 0.2s ease-in-out;
        }

            .metric-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            }

        .metric-gradient-total {
            background: linear-gradient(to right, #f9e8e48c, #dcaca2);
        }

        .metric-gradient-pending {
            background: linear-gradient(to right, #fff9e6, #ffe0b3, #ffdb80);
        }

        .metric-gradient-approved {
            background: linear-gradient(to right, #e6f9ff, #b3eaff, #80d3ff);
        }
        .metric-gradient-school{
            background: linear-gradient(to right, #6249b924, #e28bf6);
        }
        .metric-gradient-executed {
            background: linear-gradient(to right, #e6f9e6, #b3f2b3, #80ec80);
        }


        .container-p-y:not([class^=pt-]):not([class*=" pt-"]) {
            padding-top: 0 !important;
        }


        .placeholder-container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 220px;
            background: #f9f9f9;
            border: 1px dashed #e0e0e0;
            position: relative;
        }

        .apex-placeholder {
            text-align: center;
            color: #bbb;
        }

        .tab-content:not(.doc-example-content) {
            padding: 0;
        }

        .content-wrapper {
            
            flex: initial!important;
            
        }
    </style>
}


@section PageScripts {
    <script src="~/app-assets/vendor/libs/apex-charts/apexcharts.js"></script>
    <script src="~/js/Admin//admin-dashboard.js"></script>
}

