    </div> *@

    <!-- Top Bar -->
    <div class="w-100 bg-navbar-theme text-white position-fixed top-0 start-0 z-3 py-1 px-2">
        <div class="d-flex align-items-center justify-content-center">
            <!-- Logo (Left) -->
            <div class="">
                <img src="~/static/logo3.png" alt="Logo" class="" style="height: 40px;">
            </div>

            <!-- Centered Text (Overlayed Absolute Center) -->
            <div class="text-center">
                <strong>SRIJAN WEB PORTAL</strong>
            </div>

            <!-- Right Spacer (for symmetry) -->
            <div style="width: 40px;"></div>
        </div>
    </div>


    <!-- Hero: Start -->
    <section id="hero-animation" class="min-vh-100 d-flex flex-column justify-content-center">
        <div id="landingHero" class="section-py landing-hero position-relative flex-grow-1 d-flex align-items-center">
            <!-- Background Image -->
            <img src="~/app-assets/img/front-pages/backgrounds/hero-bg.png"
                 alt="hero background"
                 class="position-absolute top-0 start-50 translate-middle-x object-fit-cover w-100 h-100"
                 data-speed="1" />

            <div class="container position-relative z-2 mt-5 mb-5">
                <div class="row g-4 justify-content-center align-items-center">

                    <!-- Customer Portal -->
                    <div class="hero-text-box text-center col-12 col-lg-6">
                        <div>
                            <h1 class="text-primary hero-title display-6 fw-extrabold">
                               Customer Web Order Portal
                            </h1>
                            <h2 class="hero-sub-title h6 mb-4">
                               @*  Production-ready & easy to use Customer Portal<br class="d-none d-lg-block" />
                                for Managing Orders. *@
                            </h2>
                            <div class="landing-hero-btn d-inline-block">
                                <a href="/Auth/Login" class="btn btn-primary btn-lg">Login to Customer Portal</a>
                            </div>
                        </div>
                    </div>

                    <!-- Admin Portal -->
                    <div class="hero-text-box text-center col-12 col-lg-6">
                        <div>
                            <h1 class="text-primary hero-title display-6 fw-extrabold">
                                Mobile Admin Portal
                            </h1>
                            <h2 class="hero-sub-title h6 mb-4">
                                @* Production-ready & easy to use Admin Template<br class="d-none d-lg-block" />
                                for Reliability and Customizability. *@
                            </h2>
                            <div class="landing-hero-btn d-inline-block">
                                <a href="/Auth/LoginAdmin" class="btn btn-primary btn-lg">Login to Admin Portal</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="w-100 py-2 bg-navbar-theme text-white text-center position-fixed bottom-0 start-0 z-3">
            <small>© 2025 SRIJAN. All rights reserved.</small>
        </div>
    </section>
</div>

