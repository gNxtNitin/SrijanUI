    <script>

        function avatarLoadFail(img) {
          img.style.display = 'none';
          const badge = img.nextElementSibling;
          badge.classList.remove('d-none');

          const nameElement = document.querySelector("div.user-name > h6");
          if (!nameElement) return;

          const fullName = nameElement.innerText.trim();
          const parts = fullName.split(" ").filter(Boolean);
          let initials = "";

          if (parts.length >= 2) {
            initials = parts[0][0] + parts[1][0];
          } else if (parts.length === 1) {
            initials = parts[0][0];
          }

          badge.textContent = initials.toUpperCase();
        }


        document.addEventListener("DOMContentLoaded", function () {
            const imgs = document.querySelectorAll("div.avatar > img");

            imgs.forEach(function (img) {
                const src = img.getAttribute("src");

                if (!src || src.trim() === "" || src.trim().endsWith("/")) {
                    avatarLoadFail(img);
                }
            });
        });
            
    </script>
